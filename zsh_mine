# set command line to vi mode
bindkey -v

# set my default editor to command-line vim
EDITOR='/usr/local/bin/vim'

# PATH
export PATH=/Users/adrian/bin:/Users/adrian/local/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/X11/bin:/Users/adrian/.rvm/bin:$PATH

# GIT ALIASES
alias ga='git add'
alias gl='git log'
alias gs='git status'
alias gsw='git show'
alias gd='git diff'
alias gm='git commit -m'
alias gma='git commit -am'
alias gb='git branch'
alias gco='git checkout'
alias gra='git remote add'
alias grr='git remote rm'
alias gpl='git pull --rebase'
alias gps='git push'
alias gcl='git clone'

# HG ALIASES
alias ha='hg add'
alias hp='hg push'
alias hl='hg log'
alias hs='hg status'
alias hd='hg diff'
alias hm='hg commit -m'
alias hma='hg commit -am'
alias hb='hg branch'
alias hc='hg checkout'
alias hra='hg remote add'
alias hrr='hg remote rm'
alias hpu='hg pull'
alias hcl='hg clone'

alias pg_start='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias pg_stop='pg_ctl -D /usr/local/var/postgres stop -s -m fast'
alias pg_install='env ARCHFLAGS="-arch x86_64" gem install pg'

# SEARCH ALIASES
alias g='ack'

# APT ALIASES
alias pkg-search='apt-cache search'
alias pkg-info='apt-cache showpkg'
alias pkg-install='sudo apt-get install'

# RUBY ALIASES
alias t='bin/rspec --format nested'

alias sudoedit='sudo -e'

alias udb='sudo /usr/libexec/locate.updatedb'

alias rt='touch tmp/restart.txt'
alias rtd='touch tmp/debug.txt; rt'

alias topc='top -o cpu'
alias topm='top -o vsize'

# Fix for Mac OSX gcc
export CC=/usr/bin/gcc-4.2

# SCREEN SHORTCUTS
s() {
    screen -U -c ~/screens/"$@"
}

